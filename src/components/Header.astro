---
import vespaLogo from '../assets/vespalogo.png';
---
<header class="fixed w-full top-0 z-50 transition-all duration-300">
    <div class="absolute inset-0 bg-gradient-to-r from-theme-dark/90 to-theme-primary/90 backdrop-blur-md"></div>
    <div class="container mx-auto px-6 py-4 relative">
        <div class="flex justify-between items-center">
            <a href="/" class="flex items-center space-x-3 group">
                <img src={vespaLogo.src} alt="VESPA Academy Logo" class="h-12 transition-transform duration-300 group-hover:scale-110">
                <span class="text-2xl font-bold text-white">
                    VESPA <span class="gradient-text">Academy</span>
                </span>
            </a>
            
            <nav class="hidden md:flex items-center space-x-1">
                <a href="/solutions" class="nav-link">Solutions</a>
                <a href="/training" class="nav-link">Training</a>
                <a href="/pricing" class="nav-link">Pricing</a>
                <a href="/impact" class="nav-link">Our Impact</a>
                <a href="/about" class="nav-link">About Us</a>
                <a href="/questionnaire" class="nav-link">Try the Questionnaire</a>
                <button id="login-button" class="nav-link nav-link-login">
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                    </svg>
                    Login
                </button>
                <a href="/contact" class="nav-link nav-link-cta">Get Started</a>
            </nav>
            
            <!-- Mobile menu button -->
            <button id="mobile-menu-button" class="md:hidden text-white p-2 rounded-lg hover:bg-white/10 transition-colors">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </button>
        </div>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="md:hidden fixed left-0 right-0 top-[72px] bg-theme-dark/95 backdrop-blur-lg transition-all duration-300 max-h-0 overflow-hidden">
        <nav class="container mx-auto px-6 py-8 space-y-2">
            <a href="/solutions" class="mobile-nav-link">Solutions</a>
            <a href="/training" class="mobile-nav-link">Training</a>
            <a href="/pricing" class="mobile-nav-link">Pricing</a>
            <a href="/impact" class="mobile-nav-link">Our Impact</a>
            <a href="/about" class="mobile-nav-link">About Us</a>
            <a href="/questionnaire" class="mobile-nav-link">Try the Questionnaire</a>
            <button id="mobile-login-button" class="mobile-nav-link mobile-nav-link-login">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                </svg>
                Login
            </button>
            <a href="/contact" class="mobile-nav-link mobile-nav-link-cta">Get Started</a>
        </nav>
    </div>
</header>

<!-- Login Modal -->
<div id="login-modal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-[60] hidden flex items-center justify-center p-4">
    <div class="bg-gradient-to-br from-white to-gray-50 rounded-3xl shadow-2xl max-w-md w-full p-8 relative transform transition-all duration-300 scale-95 opacity-0" id="login-modal-content">
        <!-- Close button -->
        <button id="close-login-modal" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 transition-all hover:scale-110">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        
        <!-- Modal Content -->
        <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-theme-secondary to-theme-accent1 rounded-full mb-6">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </div>
            
            <h2 class="text-3xl font-bold text-theme-dark mb-6">Welcome to VESPA Academy</h2>
            <p class="text-gray-600 mb-8">Please select your user type to continue</p>
            
            <!-- User Type Selection -->
            <div class="space-y-4">
                <a href="https://vespaacademy.knack.com/vespa-academy#staff-landing-page" 
                   class="block w-full p-6 bg-gradient-to-r from-theme-primary to-theme-dark text-white rounded-xl hover:shadow-xl transform hover:scale-105 transition-all duration-300 group">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <svg class="w-8 h-8 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            <div class="text-left">
                                <h3 class="text-xl font-bold">Staff Member</h3>
                                <p class="text-sm opacity-90">Access staff resources and management tools</p>
                            </div>
                        </div>
                        <svg class="w-6 h-6 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </a>
                
                <a href="https://vespaacademy.knack.com/vespa-academy#landing-page/" 
                   class="block w-full p-6 bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark rounded-xl hover:shadow-xl transform hover:scale-105 transition-all duration-300 group">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <svg class="w-8 h-8 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                            <div class="text-left">
                                <h3 class="text-xl font-bold">Student</h3>
                                <p class="text-sm opacity-90">Access your learning resources and activities</p>
                            </div>
                        </div>
                        <svg class="w-6 h-6 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-link {
        @apply px-4 py-2 rounded-lg text-white font-medium transition-all duration-300 relative overflow-hidden;
    }
    
    .nav-link::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #00e5db, #7bd8d0);
        transform: translateX(-50%);
        transition: width 0.3s ease;
    }
    
    .nav-link:hover::before {
        width: 80%;
    }
    
    .nav-link:hover {
        @apply text-theme-secondary;
        transform: translateY(-2px);
    }
    
    .nav-link-cta {
        @apply bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark font-bold;
        background-size: 200% 100%;
        background-position: left bottom;
        transition: all 0.3s ease;
    }
    
    .nav-link-cta:hover {
        background-position: right bottom;
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 10px 20px rgba(0, 229, 219, 0.3);
    }
    
    .nav-link-login {
        @apply border border-white/30 hover:border-theme-secondary;
    }
    
    .nav-link-login:hover {
        @apply bg-white/10;
    }
    
    .mobile-nav-link {
        @apply block px-4 py-3 rounded-lg text-white font-medium transition-all duration-300;
        background: linear-gradient(135deg, transparent, transparent);
    }
    
    .mobile-nav-link:hover {
        @apply text-theme-secondary;
        background: linear-gradient(135deg, rgba(255,255,255,0.05), rgba(255,255,255,0.1));
        transform: translateX(10px);
    }
    
    .mobile-nav-link-cta {
        @apply bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark font-bold text-center mt-4;
    }
    
    .mobile-nav-link-login {
        @apply border border-white/30 hover:border-theme-secondary text-left;
    }
    
    .mobile-nav-link-login:hover {
        @apply bg-white/10;
    }
    
    #mobile-menu.menu-open {
        @apply max-h-[500px];
    }
</style>

<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    let isMenuOpen = false;
    
    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', (e) => {
            e.stopPropagation();
            isMenuOpen = !isMenuOpen;
            
            if (isMenuOpen) {
                mobileMenu.classList.add('menu-open');
            } else {
                mobileMenu.classList.remove('menu-open');
            }
            
            // Animate menu icon
            const icon = mobileMenuButton.querySelector('svg');
            if (isMenuOpen) {
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
            } else {
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>';
            }
        });
        
        // Close menu when clicking on a link
        const mobileLinks = mobileMenu.querySelectorAll('a');
        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                isMenuOpen = false;
                mobileMenu.classList.remove('menu-open');
                const icon = mobileMenuButton.querySelector('svg');
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>';
            });
        });
        
        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
            if (isMenuOpen && !mobileMenuButton.contains(e.target) && !mobileMenu.contains(e.target)) {
                isMenuOpen = false;
                mobileMenu.classList.remove('menu-open');
                const icon = mobileMenuButton.querySelector('svg');
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>';
            }
        });
    }
    
    // Login Modal functionality
    const loginButton = document.getElementById('login-button');
    const mobileLoginButton = document.getElementById('mobile-login-button');
    const loginModal = document.getElementById('login-modal');
    const loginModalContent = document.getElementById('login-modal-content');
    const closeLoginModal = document.getElementById('close-login-modal');
    
    function openLoginModal() {
        loginModal.classList.remove('hidden');
        setTimeout(() => {
            loginModalContent.classList.remove('scale-95', 'opacity-0');
            loginModalContent.classList.add('scale-100', 'opacity-100');
        }, 10);
        
        // Close mobile menu if open
        if (isMenuOpen) {
            isMenuOpen = false;
            mobileMenu.classList.remove('menu-open');
            const icon = mobileMenuButton.querySelector('svg');
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>';
        }
    }
    
    function closeLoginModalFunc() {
        loginModalContent.classList.add('scale-95', 'opacity-0');
        loginModalContent.classList.remove('scale-100', 'opacity-100');
        setTimeout(() => {
            loginModal.classList.add('hidden');
        }, 300);
    }
    
    // Desktop login button
    if (loginButton) {
        loginButton.addEventListener('click', openLoginModal);
    }
    
    // Mobile login button
    if (mobileLoginButton) {
        mobileLoginButton.addEventListener('click', openLoginModal);
    }
    
    // Close modal button
    if (closeLoginModal) {
        closeLoginModal.addEventListener('click', closeLoginModalFunc);
    }
    
    // Close modal when clicking outside
    if (loginModal) {
        loginModal.addEventListener('click', (e) => {
            if (e.target === loginModal) {
                closeLoginModalFunc();
            }
        });
    }
</script> 