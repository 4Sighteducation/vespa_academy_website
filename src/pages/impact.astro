<script is:inline>
// Video fullscreen function
function openVideoFullscreen() {
  const iframe = document.querySelector('iframe[src*="muse.ai"]');
  if (iframe && iframe.requestFullscreen) {
    iframe.requestFullscreen();
  } else if (iframe && iframe.webkitRequestFullscreen) {
    iframe.webkitRequestFullscreen();
  } else if (iframe && iframe.msRequestFullscreen) {
    iframe.msRequestFullscreen();
  }
}

// Award modal functions
function openAwardModal(modalId) {
  const modal = document.getElementById(modalId + '-modal');
  if (modal) {
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }
}

function closeAwardModal(modalId) {
  const modal = document.getElementById(modalId + '-modal');
  if (modal) {
    modal.classList.add('hidden');
    document.body.style.overflow = '';
  }
}

// Award popup functions
function closeAwardPopup() {
  const popup = document.getElementById('award-popup');
  if (popup) {
    popup.style.animation = 'slide-out 0.5s ease-in forwards';
    setTimeout(() => {
      popup.classList.add('hidden');
      popup.style.animation = '';
    }, 500);
  }
}

// Test function to show award popup
function testShowAwardPopup() {
  sessionStorage.removeItem('awardPopupShown');
  const popup = document.getElementById('award-popup');
  if (popup) {
    popup.classList.remove('hidden');
    popup.style.animation = 'slide-in 0.5s ease-out forwards';
    
    // Auto-hide after 10 seconds
    setTimeout(() => {
      closeAwardPopup();
    }, 10000);
  }
}

// Make functions globally available
window.openVideoFullscreen = openVideoFullscreen;
window.openAwardModal = openAwardModal;
window.closeAwardModal = closeAwardModal;
window.closeAwardPopup = closeAwardPopup;
window.testShowAwardPopup = testShowAwardPopup;

// Show award popup after 3 seconds
document.addEventListener('DOMContentLoaded', () => {
  const popup = document.getElementById('award-popup');
  
  // Add click event listeners to award images
  const awardImages = document.querySelectorAll('.award-image');
  
  awardImages.forEach((img, index) => {
    img.style.cursor = 'pointer';
    
    if (index === 0) {
      // First image is BESA
      img.addEventListener('click', function() {
        openAwardModal('besa');
      });
    } else if (index === 1) {
      // Second image is Teach Secondary
      img.addEventListener('click', function() {
        openAwardModal('teach');
      });
    }
  });
  
  setTimeout(() => {
    if (popup && !sessionStorage.getItem('awardPopupShown')) {
      popup.classList.remove('hidden');
      popup.style.animation = 'slide-in 0.5s ease-out forwards';
      sessionStorage.setItem('awardPopupShown', 'true');
      
      // Auto-hide after 10 seconds
      setTimeout(() => {
        closeAwardPopup();
      }, 10000);
    }
  }, 3000);
});
