---
import Layout from '../layouts/Layout.astro';
---

<Layout title="VESPA Books | Essential Reading for Educators">
  <main class="overflow-hidden">
    <!-- Hero Section with Animated Background -->
    <section class="relative h-screen flex flex-col justify-between text-center overflow-hidden">
      <!-- Animated Background -->
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-br from-theme-dark via-theme-primary to-theme-accent2 opacity-90"></div>
        <!-- Floating shapes -->
        <div class="floating-shapes">
          <div class="shape shape-1"></div>
          <div class="shape shape-2"></div>
          <div class="shape shape-3"></div>
          <div class="shape shape-4"></div>
        </div>
      </div>
      
      <div class="flex-1 flex items-center justify-center">
        <div class="container mx-auto px-6 relative z-10 pt-20">
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold leading-tight mb-4 text-white" 
            data-aos="fade-up" 
            data-aos-duration="1200">
            The VESPA
            <span class="block gradient-text text-5xl md:text-7xl lg:text-8xl mt-2">Book Collection</span>
          </h1>
          <p class="text-lg md:text-xl lg:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto" 
            data-aos="fade-up" 
            data-aos-delay="200">
            The foundational texts that started it all. Essential reading for educators wanting to deeply understand the VESPA methodology.
          </p>
          <div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-6"
            data-aos="fade-up"
            data-aos-delay="400">
            <a href="#books" class="btn-primary group">
              <span class="relative z-10">Browse Collection</span>
              <div class="btn-glow"></div>
            </a>
            <a href="https://www.crownhouse.co.uk" target="_blank" class="btn-secondary group">
              <span class="relative z-10">Visit Publisher</span>
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="relative z-10 pb-8 animate-bounce">
        <svg class="w-12 h-12 text-white mx-auto drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- Books Section -->
    <section id="books" class="py-24 bg-gradient-to-b from-theme-primary to-theme-dark">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6" data-aos="fade-down">
            Published by <span class="gradient-text">Crown House Publishing</span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto" data-aos="fade-up">
            Written by Steve Oakes and Martin Griffin, these books have transformed how schools approach student development worldwide.
          </p>
        </div>

        <!-- Books Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 max-w-6xl mx-auto">
          <!-- The VESPA Handbook -->
          <div class="book-card" data-aos="fade-up" data-aos-delay="100">
            <div class="book-image-wrapper">
              <img src="/assets/0012691_the-vespa-handbook_550.jpeg" alt="The VESPA Handbook" class="book-image">
              <div class="book-badge">New Edition</div>
            </div>
            <div class="book-content">
              <h3 class="text-2xl font-bold text-white mb-3">The VESPA Handbook</h3>
              <p class="text-gray-300 mb-4">
                40 new activities to boost student commitment, motivation and productivity. The practical guide to implementing VESPA in your school.
              </p>
              <div class="book-features">
                <span class="feature-tag">Updated Content</span>
                <span class="feature-tag">Practical Activities</span>
                <span class="feature-tag">Implementation Guide</span>
              </div>
              <a href="https://www.crownhouse.co.uk/the-vespa-handbook" target="_blank" class="book-cta">
                <span>View on Crown House</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>

          <!-- The A Level Mindset -->
          <div class="book-card" data-aos="fade-up" data-aos-delay="200">
            <div class="book-image-wrapper">
              <img src="/assets/0012478_the-a-level-mindset-revised-edition_550.jpeg" alt="The A Level Mindset" class="book-image">
              <div class="book-badge revised">Revised Edition</div>
            </div>
            <div class="book-content">
              <h3 class="text-2xl font-bold text-white mb-3">The A Level Mindset</h3>
              <p class="text-gray-300 mb-4">
                40 activities for transforming student commitment, motivation and productivity. Essential for sixth form success.
              </p>
              <div class="book-features">
                <span class="feature-tag">A Level Focus</span>
                <span class="feature-tag">Student Activities</span>
                <span class="feature-tag">Research-Based</span>
              </div>
              <a href="https://www.crownhouse.co.uk/the-a-level-mindset" target="_blank" class="book-cta">
                <span>View on Crown House</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>

          <!-- The GCSE Mindset -->
          <div class="book-card" data-aos="fade-up" data-aos-delay="300">
            <div class="book-image-wrapper">
              <img src="/assets/0012496_the-gcse-mindset_550.jpeg" alt="The GCSE Mindset" class="book-image">
              <div class="book-badge">Best Seller</div>
            </div>
            <div class="book-content">
              <h3 class="text-2xl font-bold text-white mb-3">The GCSE Mindset</h3>
              <p class="text-gray-300 mb-4">
                40 activities for transforming student commitment, motivation and productivity. Perfect for Key Stage 4 students.
              </p>
              <div class="book-features">
                <span class="feature-tag">GCSE Focus</span>
                <span class="feature-tag">Proven Methods</span>
                <span class="feature-tag">Easy to Implement</span>
              </div>
              <a href="https://www.crownhouse.co.uk/the-gcse-mindset2" target="_blank" class="book-cta">
                <span>View on Crown House</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- About the Authors -->
        <div class="mt-24 bg-white/10 backdrop-blur-sm rounded-3xl p-12 max-w-4xl mx-auto" data-aos="fade-up">
          <h3 class="text-3xl font-bold text-white mb-8 text-center">About the Authors</h3>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="text-center">
              <img src="/assets/steveoakes.webp" alt="Steve Oakes" class="w-32 h-32 rounded-full mx-auto mb-4 ring-4 ring-white/30">
              <h4 class="text-xl font-bold text-white mb-2">Steve Oakes</h4>
              <p class="text-gray-300">
                Co-creator of the VESPA model and former Deputy Headteacher at The Blue Coat School, Oldham. Steve's innovative approach to student development has transformed education practices globally.
              </p>
            </div>
            <div class="text-center">
              <img src="/assets/martingriffin.jpg" alt="Martin Griffin" class="w-32 h-32 rounded-full mx-auto mb-4 ring-4 ring-white/30">
              <h4 class="text-xl font-bold text-white mb-2">Martin Griffin</h4>
              <p class="text-gray-300">
                Co-creator of the VESPA model and educational consultant. Martin's expertise in character education and student mindset has helped thousands of educators worldwide.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 bg-gradient-to-r from-theme-accent2 to-theme-secondary relative overflow-hidden">
      <div class="moving-gradient"></div>
      <div class="container mx-auto text-center px-6 relative z-10">
        <h2 class="text-4xl font-bold mb-6 text-white" data-aos="zoom-in">
          Start Your VESPA Journey Today
        </h2>
        <p class="text-xl mb-10 text-white/90 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
          Whether you're new to VESPA or looking to deepen your understanding, these books provide the foundation for transforming student outcomes.
        </p>
        <div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-6" data-aos="fade-up" data-aos-delay="400">
          <a href="https://www.crownhouse.co.uk" target="_blank" class="btn-cta-large group">
            <span class="relative z-10">Browse All Books</span>
            <div class="btn-cta-glow"></div>
          </a>
          <a href="/solutions" class="btn-secondary-large">
            Explore Digital Solutions →
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
/* Gradient text */
.gradient-text {
  @apply bg-gradient-to-r from-theme-secondary to-theme-accent1 bg-clip-text text-transparent;
}

/* Button styles */
.btn-primary {
  @apply relative inline-flex items-center px-8 py-4 bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark font-bold rounded-xl text-lg overflow-hidden transition-all duration-300 transform hover:scale-105 shadow-xl;
}

.btn-glow {
  @apply absolute inset-0 bg-gradient-to-r from-theme-secondary to-theme-accent1 opacity-0 blur-3xl transition-opacity duration-300;
}

.btn-primary:hover .btn-glow {
  opacity: 0.4;
}

.btn-secondary {
  @apply inline-flex items-center px-8 py-4 border-2 border-white/30 text-white font-bold rounded-xl text-lg transition-all duration-300 hover:bg-white/10 hover:border-white/50;
}

/* Floating shapes animation */
.floating-shapes {
  @apply absolute inset-0 overflow-hidden;
}

.shape {
  @apply absolute rounded-full opacity-10;
  animation: float 20s infinite ease-in-out;
}

.shape-1 {
  @apply w-64 h-64 bg-theme-secondary -top-32 -left-32;
  animation-delay: 0s;
}

.shape-2 {
  @apply w-96 h-96 bg-theme-accent1 -bottom-48 -right-48;
  animation-delay: 5s;
}

.shape-3 {
  @apply w-80 h-80 bg-effort top-1/2 -left-40;
  animation-delay: 10s;
}

.shape-4 {
  @apply w-72 h-72 bg-vision -top-36 right-1/4;
  animation-delay: 15s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  25% { transform: translate(100px, 100px) rotate(90deg); }
  50% { transform: translate(-50px, 200px) rotate(180deg); }
  75% { transform: translate(200px, -100px) rotate(270deg); }
}

/* Book card styles */
.book-card {
  @apply bg-gradient-to-br from-white/5 to-white/10 backdrop-blur-sm rounded-3xl overflow-hidden border border-white/10 transition-all duration-500 hover:scale-105 hover:shadow-2xl;
}

.book-image-wrapper {
  @apply relative p-8 bg-gradient-to-br from-white/10 to-transparent;
}

.book-image {
  @apply w-full h-auto rounded-xl shadow-2xl transition-transform duration-300;
}

.book-card:hover .book-image {
  @apply scale-105;
}

.book-badge {
  @apply absolute top-4 right-4 px-3 py-1 bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark text-xs font-bold rounded-full;
}

.book-badge.revised {
  @apply bg-gradient-to-r from-effort to-practice text-white;
}

.book-content {
  @apply p-8;
}

.book-features {
  @apply flex flex-wrap gap-2 mb-6;
}

.feature-tag {
  @apply px-3 py-1 bg-white/10 backdrop-blur-sm rounded-full text-xs font-semibold text-gray-300;
}

.book-cta {
  @apply inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark font-bold rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl w-full;
}

/* Enhanced buttons */
.btn-cta-large {
  @apply relative inline-flex items-center px-12 py-6 bg-white text-theme-dark font-bold text-xl rounded-2xl overflow-hidden transition-all duration-300 transform hover:scale-105;
}

.btn-cta-glow {
  @apply absolute inset-0 bg-white opacity-0 blur-2xl transition-opacity duration-300;
}

.btn-cta-large:hover .btn-cta-glow {
  opacity: 0.3;
}

.btn-secondary-large {
  @apply inline-flex items-center px-12 py-6 border-2 border-white text-white font-bold text-xl rounded-2xl transition-all duration-300 hover:bg-white/10;
}

/* Moving gradient background */
.moving-gradient {
  @apply absolute inset-0;
  background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%);
  background-size: 200% 200%;
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { background-position: -100% -100%; }
  100% { background-position: 100% 100%; }
}
</style> 