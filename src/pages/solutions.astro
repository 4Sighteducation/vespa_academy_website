---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Solutions | VESPA Academy">
	<main class="overflow-hidden">
		<!-- Hero Section -->
		<section class="relative py-24 bg-gradient-to-br from-theme-dark via-theme-primary to-theme-accent2 text-white">
			<div class="absolute inset-0 opacity-20">
				<div class="parallax-bg h-full w-full" data-speed="0.3"
					style="background-image: url('/images/students-bg.jpg'); background-size: cover; background-position: center;">
				</div>
			</div>
			
			<div class="container mx-auto px-6 text-center relative z-10">
				<h1 class="text-5xl md:text-6xl font-extrabold mb-6" data-aos="fade-down">
					Transform Your <span class="gradient-text">Educational Approach</span>
				</h1>
				<p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="200">
					Discover our comprehensive suite of tools and resources designed to develop students' non-cognitive skills and drive academic success.
				</p>
			</div>
		</section>

		<!-- Products Grid Section -->
		<section class="py-24 bg-gradient-to-b from-theme-dark to-theme-primary">
			<div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-4xl md:text-5xl font-bold text-white mb-6" data-aos="fade-down">
						Our <span class="gradient-text">Complete Solutions</span>
					</h2>
					<p class="text-xl text-gray-300 max-w-3xl mx-auto" data-aos="fade-up">
						Choose from our range of evidence-based products to support your institution's unique needs
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
					<!-- VESPA Coaching Portal -->
					<div class="product-card group" data-aos="fade-up" data-aos-delay="100">
						<div class="product-card-inner">
							<div class="product-icon-wrapper bg-gradient-to-br from-theme-secondary to-theme-accent1">
								<svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
								</svg>
							</div>
							<h3 class="text-3xl font-bold text-white mb-4">VESPA Coaching Portal</h3>
							<p class="text-gray-300 mb-6 text-lg">
								The complete platform for transforming student development through personalised coaching, assessment, and analytics.
							</p>
							<ul class="space-y-3 mb-8 text-left">
								<li class="flex items-start">
									<span class="text-theme-secondary mr-2 mt-1">✓</span>
									<span class="text-gray-400">VESPA Questionnaire & instant reports</span>
								</li>
								<li class="flex items-start">
									<span class="text-theme-secondary mr-2 mt-1">✓</span>
									<span class="text-gray-400">Personalised coaching conversations</span>
								</li>
								<li class="flex items-start">
									<span class="text-theme-secondary mr-2 mt-1">✓</span>
									<span class="text-gray-400">Analytics dashboard & tracking</span>
								</li>
								<li class="flex items-start">
									<span class="text-theme-secondary mr-2 mt-1">✓</span>
									<span class="text-gray-400">Includes full Resource Portal access</span>
								</li>
							</ul>
							<a href="/coaching-portal" class="product-cta group">
								<span>Explore Coaching Portal</span>
								<svg class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
								</svg>
							</a>
						</div>
					</div>

					<!-- VESPA Resource Portal -->
					<div class="product-card group" data-aos="fade-up" data-aos-delay="200">
						<div class="product-card-inner">
							<div class="product-icon-wrapper bg-gradient-to-br from-effort to-practice">
								<svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
								</svg>
							</div>
							<h3 class="text-3xl font-bold text-white mb-4">VESPA Resource Portal</h3>
							<p class="text-gray-300 mb-6 text-lg">
								120+ ready-to-deliver slide decks and worksheets for classroom teaching. Perfect for schools wanting to implement VESPA activities without student accounts.
							</p>
							<ul class="space-y-3 mb-8 text-left">
								<li class="flex items-start">
									<span class="text-effort mr-2 mt-1">✓</span>
									<span class="text-gray-400">120+ interactive slide decks</span>
								</li>
								<li class="flex items-start">
									<span class="text-effort mr-2 mt-1">✓</span>
									<span class="text-gray-400">PDF worksheets & handouts</span>
								</li>
								<li class="flex items-start">
									<span class="text-effort mr-2 mt-1">✓</span>
									<span class="text-gray-400">Front-of-class delivery ready</span>
								</li>
								<li class="flex items-start">
									<span class="text-red-400 mr-2 mt-1">✗</span>
									<span class="text-gray-400">No student accounts or questionnaire</span>
								</li>
							</ul>
							<a href="/resource-portal" class="product-cta group">
								<span>View Resource Portal</span>
								<svg class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
								</svg>
							</a>
						</div>
					</div>

					<!-- Training and Keynote Sessions -->
					<div class="product-card group" data-aos="fade-up" data-aos-delay="300">
						<div class="product-card-inner">
							<div class="product-icon-wrapper bg-gradient-to-br from-systems to-vision">
								<svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
								</svg>
							</div>
							<h3 class="text-3xl font-bold text-white mb-4">Training & Keynotes</h3>
							<p class="text-gray-300 mb-6 text-lg">
								Expert-led training sessions and inspiring keynotes to embed VESPA principles across your institution.
							</p>
							<ul class="space-y-3 mb-8 text-left">
								<li class="flex items-start">
									<span class="text-systems mr-2 mt-1">✓</span>
									<span class="text-gray-400">In-person & virtual options</span>
								</li>
								<li class="flex items-start">
									<span class="text-systems mr-2 mt-1">✓</span>
									<span class="text-gray-400">Customised to your needs</span>
								</li>
								<li class="flex items-start">
									<span class="text-systems mr-2 mt-1">✓</span>
									<span class="text-gray-400">Whole-school implementation</span>
								</li>
								<li class="flex items-start">
									<span class="text-systems mr-2 mt-1">✓</span>
									<span class="text-gray-400">Ongoing support included</span>
								</li>
							</ul>
							<a href="/training" class="product-cta group">
								<span>Explore Training Options</span>
								<svg class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
								</svg>
							</a>
						</div>
					</div>

					<!-- Books -->
					<div class="product-card group" data-aos="fade-up" data-aos-delay="400">
						<div class="product-card-inner">
							<div class="product-icon-wrapper bg-gradient-to-br from-attitude to-theme-accent2">
								<svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
								</svg>
							</div>
							<h3 class="text-3xl font-bold text-white mb-4">VESPA Books</h3>
							<p class="text-gray-300 mb-6 text-lg">
								The foundational texts that started it all. Essential reading for educators wanting to deeply understand the VESPA methodology.
							</p>
							
							<!-- Book Images Grid -->
							<div class="grid grid-cols-3 gap-3 mb-6">
								<a href="https://www.crownhouse.co.uk/the-vespa-handbook" target="_blank">
									<img src="/assets/0012691_the-vespa-handbook_550.jpeg" alt="The VESPA Handbook" class="rounded-lg shadow-lg hover:scale-105 transition-transform">
								</a>
								<a href="https://www.crownhouse.co.uk/the-a-level-mindset" target="_blank">
									<img src="/assets/0012478_the-a-level-mindset-revised-edition_550.jpeg" alt="The A Level Mindset" class="rounded-lg shadow-lg hover:scale-105 transition-transform">
								</a>
								<a href="https://www.crownhouse.co.uk/the-gcse-mindset2" target="_blank">
									<img src="/assets/0012496_the-gcse-mindset_550.jpeg" alt="The GCSE Mindset" class="rounded-lg shadow-lg hover:scale-105 transition-transform">
								</a>
							</div>
							
							<p class="text-sm text-gray-400 mb-6">
								Published by Crown House Publishing
							</p>
							
							<a href="https://www.crownhouse.co.uk" target="_blank" class="product-cta group">
								<span>Browse All Books</span>
								<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
								</svg>
							</a>
						</div>
					</div>
				</div>

				<!-- Quick Decision Helper -->
				<div class="mt-20 max-w-4xl mx-auto" data-aos="fade-up" data-aos-delay="500">
					<div class="bg-white/10 backdrop-blur-sm p-10 rounded-3xl border border-white/20">
						<h3 class="text-2xl font-bold text-white mb-6 text-center">Not Sure Which Solution is Right for You?</h3>
						<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
							<div class="text-center">
								<div class="bg-theme-secondary/20 p-6 rounded-xl mb-4">
									<h4 class="text-xl font-semibold text-theme-secondary mb-3">Want Student Reports & Analytics?</h4>
									<p class="text-gray-300 mb-4">Choose the <strong>Coaching Portal</strong> for the complete solution including questionnaires, reports, and dashboards.</p>
									<a href="/coaching-portal" class="text-theme-secondary hover:text-theme-accent1 font-semibold">Learn More →</a>
								</div>
							</div>
							<div class="text-center">
								<div class="bg-effort/20 p-6 rounded-xl mb-4">
									<h4 class="text-xl font-semibold text-effort mb-3">Just Need Teaching Resources?</h4>
									<p class="text-gray-300 mb-4">The <strong>Resource Portal</strong> provides all our activities and slides for classroom delivery.</p>
									<a href="/resource-portal" class="text-effort hover:text-practice font-semibold">Learn More →</a>
								</div>
							</div>
						</div>
						<div class="text-center mt-8">
							<p class="text-gray-400 mb-4">Still have questions?</p>
							<a href="/contact" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark font-bold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
								Contact Our Team
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-24 bg-gradient-to-r from-theme-accent2 to-theme-secondary relative overflow-hidden">
			<div class="moving-gradient"></div>
			<div class="container mx-auto text-center px-6 relative z-10">
				<h2 class="text-4xl font-bold mb-6 text-white" data-aos="zoom-in">
					Ready to Transform Your School's Approach?
				</h2>
				<p class="text-xl mb-10 text-white/90 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
					Join hundreds of schools worldwide using VESPA to develop students' non-cognitive skills and drive academic achievement.
				</p>
				<div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-6" data-aos="fade-up" data-aos-delay="400">
					<a href="https://calendly.com/vespaacademy/15minmeeting" target="_blank" class="btn-cta-large group">
						<span class="relative z-10">Book a Demo</span>
						<div class="btn-cta-glow"></div>
					</a>
					<a href="/pricing" class="btn-secondary-large">
						View Pricing →
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
/* Product Cards */
.product-card {
	@apply relative;
	perspective: 1000px;
}

.product-card-inner {
	@apply bg-gradient-to-br from-white/5 to-white/10 backdrop-blur-sm p-10 rounded-3xl border border-white/10 transition-all duration-500 h-full flex flex-col;
	transform-style: preserve-3d;
}

.product-card:hover .product-card-inner {
	@apply border-theme-secondary/50;
	transform: translateY(-10px) rotateX(2deg);
	box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
}

.product-icon-wrapper {
	@apply w-24 h-24 rounded-2xl flex items-center justify-center mb-8 mx-auto shadow-2xl;
	transform: translateZ(40px);
}

.product-cta {
	@apply inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark font-bold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl w-full;
}

.product-cta-secondary {
	@apply inline-flex items-center justify-center px-8 py-4 border-2 border-white/30 text-white font-bold rounded-xl transition-all duration-300 hover:bg-white/10 hover:border-white/50 w-full;
}

/* Enhanced buttons */
.btn-cta-large {
	@apply relative inline-flex items-center px-12 py-6 bg-white text-theme-dark font-bold text-xl rounded-2xl overflow-hidden transition-all duration-300 transform hover:scale-105;
}

.btn-cta-glow {
	@apply absolute inset-0 bg-white opacity-0 blur-2xl transition-opacity duration-300;
}

.btn-cta-large:hover .btn-cta-glow {
	opacity: 0.3;
}

.btn-secondary-large {
	@apply inline-flex items-center px-12 py-6 border-2 border-white text-white font-bold text-xl rounded-2xl transition-all duration-300 hover:bg-white/10;
}

/* Moving gradient background */
.moving-gradient {
	@apply absolute inset-0;
	background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%);
	background-size: 200% 200%;
	animation: shimmer 3s infinite;
}

@keyframes shimmer {
	0% { background-position: -100% -100%; }
	100% { background-position: 100% 100%; }
}

/* Book image hover effects */
.product-card img:hover {
	transform: scale(1.05) rotateY(5deg);
	box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}
</style> 