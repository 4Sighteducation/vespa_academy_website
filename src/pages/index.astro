---
import Layout from '../layouts/Layout.astro';
import AnimatedSection from '../components/AnimatedSection.astro';
import ActivityModal from '../components/ActivityModal.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="VESPA Academy | Non-Cognitive Skills for Academic Success">
	<main class="overflow-hidden">
		<!-- Hero Section with Parallax Background -->
		<section class="relative h-screen flex flex-col justify-between text-center overflow-hidden">
			<!-- Animated Background -->
			<div class="absolute inset-0 z-0">
				<div class="absolute inset-0 bg-gradient-to-br from-theme-dark via-theme-primary to-theme-accent2 opacity-90"></div>
				<div class="parallax-bg absolute inset-0 opacity-20" data-speed="0.5" 
					style="background-image: url('/images/students-bg.jpg'); background-size: cover; background-position: center;">
				</div>
				<!-- Floating shapes -->
				<div class="floating-shapes">
					<div class="shape shape-1"></div>
					<div class="shape shape-2"></div>
					<div class="shape shape-3"></div>
					<div class="shape shape-4"></div>
				</div>
			</div>
			
			<div class="flex-1 flex items-center justify-center">
				<div class="container mx-auto px-6 relative z-10 pt-20">
					<h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold leading-tight mb-4 text-white" 
						data-aos="fade-up" 
						data-aos-duration="1200">
						Unlock Your Students' 
						<span class="block gradient-text text-5xl md:text-7xl lg:text-8xl mt-2">True Potential</span>
					</h1>
					<p class="text-lg md:text-xl lg:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto" 
						data-aos="fade-up" 
						data-aos-delay="200">
						The research-driven framework to develop the non-cognitive skills that create successful, resilient, and independent learners.
					</p>
					<div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-6"
						data-aos="fade-up"
						data-aos-delay="400">
						<a href="/solutions" class="btn-primary group">
							<span class="relative z-10">Explore Solutions</span>
							<div class="btn-glow"></div>
						</a>
						<a href="https://calendly.com/vespaacademy/15minmeeting" target="_blank" class="btn-secondary group">
							<span class="relative z-10">Book a Demo</span>
							<svg class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
							</svg>
						</a>
					</div>
				</div>
			</div>
			
			<!-- Scroll Indicator -->
			<div class="relative z-10 pb-8 animate-bounce">
				<svg class="w-12 h-12 text-white mx-auto drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
					<path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
				</svg>
			</div>
		</section>

		<!-- The Five Pillars of Success Section -->
		<section class="py-24 bg-gradient-to-b from-theme-primary to-theme-dark text-white relative">
			<div class="container mx-auto px-6">
				<div class="max-w-5xl mx-auto">
					<h2 class="text-5xl font-bold mb-8 text-center" data-aos="fade-down">
						The Five Pillars of <span class="gradient-text">Success</span>
					</h2>
					
					<div class="text-center mb-12" data-aos="fade-up">
						<p class="text-2xl text-gray-300 mb-6">
							VESPA is a research-driven framework that develops the essential non-cognitive skills every student needs for academic success.
						</p>
						<p class="text-xl text-gray-400">
							Each pillar represents a crucial dimension that predicts student achievement:
						</p>
					</div>
					
					<div class="grid md:grid-cols-5 gap-6 mb-12" data-aos="fade-up" data-aos-delay="200">
						<a href="#vision-detail" class="text-center group cursor-pointer">
							<div class="w-20 h-20 bg-vision rounded-full flex items-center justify-center mx-auto mb-3 transform transition-all duration-300 group-hover:scale-110">
								<span class="text-3xl font-bold text-white">V</span>
							</div>
							<h3 class="text-xl font-bold text-vision">Vision</h3>
							<p class="text-sm text-gray-400 mt-2">Clear goals & future-mindedness</p>
						</a>
						<a href="#effort-detail" class="text-center group cursor-pointer">
							<div class="w-20 h-20 bg-effort rounded-full flex items-center justify-center mx-auto mb-3 transform transition-all duration-300 group-hover:scale-110">
								<span class="text-3xl font-bold text-white">E</span>
							</div>
							<h3 class="text-xl font-bold text-effort">Effort</h3>
							<p class="text-sm text-gray-400 mt-2">Academic perseverance & hard work</p>
						</a>
						<a href="#systems-detail" class="text-center group cursor-pointer">
							<div class="w-20 h-20 bg-systems rounded-full flex items-center justify-center mx-auto mb-3 transform transition-all duration-300 group-hover:scale-110">
								<span class="text-3xl font-bold text-white">S</span>
							</div>
							<h3 class="text-xl font-bold text-systems">Systems</h3>
							<p class="text-sm text-gray-400 mt-2">Organisation & time management</p>
						</a>
						<a href="#practice-detail" class="text-center group cursor-pointer">
							<div class="w-20 h-20 bg-practice rounded-full flex items-center justify-center mx-auto mb-3 transform transition-all duration-300 group-hover:scale-110">
								<span class="text-3xl font-bold text-white">P</span>
							</div>
							<h3 class="text-xl font-bold text-practice">Practice</h3>
							<p class="text-sm text-gray-400 mt-2">Effective study techniques</p>
						</a>
						<a href="#attitude-detail" class="text-center group cursor-pointer">
							<div class="w-20 h-20 bg-attitude rounded-full flex items-center justify-center mx-auto mb-3 transform transition-all duration-300 group-hover:scale-110">
								<span class="text-3xl font-bold text-theme-dark">A</span>
							</div>
							<h3 class="text-xl font-bold text-attitude">Attitude</h3>
							<p class="text-sm text-gray-400 mt-2">Confidence & growth mindset</p>
						</a>
					</div>
					
					<div class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl border border-white/20" data-aos="fade-up" data-aos-delay="300">
						<p class="text-lg text-gray-300 text-center leading-relaxed">
							Unlike traditional academic support that focuses solely on subject knowledge, VESPA addresses the underlying behaviours and mindsets that enable students to learn effectively. Our evidence-based approach has been proven to close achievement gaps and transform educational outcomes across diverse settings.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Coaching Conversations Section -->
		<section id="coaching-conversations" class="relative py-24 bg-gradient-to-b from-theme-primary to-theme-dark">
			<div class="wave-divider-top">
				<svg viewBox="0 0 1200 120" preserveAspectRatio="none">
					<path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" 
						fill="rgba(26, 34, 105, 0.3)"></path>
				</svg>
			</div>
			
			<div class="container mx-auto px-6">
				<div class="max-w-6xl mx-auto">
					<h2 class="text-5xl font-bold mb-12 text-white text-center" data-aos="zoom-in">
						Transforming Learning Through <span class="gradient-text">Coaching Conversations</span>
					</h2>
					
					<div class="flex flex-col lg:flex-row gap-8 items-stretch">
						<!-- Left Column - Main Content -->
						<div class="flex-1 flex flex-col gap-6" data-aos="fade-right">
							<div class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl border border-white/20 flex-shrink-0">
								<h3 class="text-2xl font-bold text-white mb-4">Our Unique Approach</h3>
								<p class="text-lg text-gray-300 leading-relaxed">
									We empower students to discover their own solutions through personalised coaching reports that spark meaningful self-reflection and sustainable behaviour change.
								</p>
							</div>
							
							<div class="grid grid-cols-1 md:grid-cols-2 gap-6 flex-1">
								<div class="bg-gradient-to-br from-theme-secondary/20 to-theme-secondary/10 p-6 rounded-xl h-full flex flex-col">
									<h4 class="text-xl font-bold text-white mb-3 flex items-center">
										<span class="text-theme-secondary text-2xl mr-3">ðŸ’­</span>
										Coaching Questions
									</h4>
									<p class="text-gray-300 flex-1">
										Open-ended prompts that guide students to solve their own challenges
									</p>
								</div>
								
								<div class="bg-gradient-to-br from-theme-accent1/20 to-theme-accent1/10 p-6 rounded-xl h-full flex flex-col">
									<h4 class="text-xl font-bold text-white mb-3 flex items-center">
										<span class="text-theme-accent1 text-2xl mr-3">ðŸŽ¯</span>
										Self-Discovery
									</h4>
									<p class="text-gray-300 flex-1">
										Students develop solutions they're more likely to implement and maintain
									</p>
								</div>
							</div>
							
							<div class="bg-white/5 p-6 rounded-xl flex-shrink-0">
								<h4 class="text-xl font-bold text-white mb-4">Key Report Features</h4>
								<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
									<div class="flex items-start">
										<span class="text-theme-secondary mr-2">âœ“</span>
										<span class="text-gray-300">Instant personalised feedback</span>
									</div>
									<div class="flex items-start">
										<span class="text-theme-secondary mr-2">âœ“</span>
										<span class="text-gray-300">Reflective goal-setting sections</span>
									</div>
									<div class="flex items-start">
										<span class="text-theme-secondary mr-2">âœ“</span>
										<span class="text-gray-300">Targeted coaching questions</span>
									</div>
									<div class="flex items-start">
										<span class="text-theme-secondary mr-2">âœ“</span>
										<span class="text-gray-300">Evidence-based strategies</span>
									</div>
								</div>
							</div>
						</div>
						
						<!-- Right Column - Report Preview -->
						<div class="lg:w-[400px] flex flex-col" data-aos="fade-left" data-aos-delay="300">
							<div class="bg-gradient-to-br from-white/10 to-white/5 p-6 rounded-2xl backdrop-blur-sm flex-1 flex flex-col">
								<h3 class="text-xl font-bold text-white mb-4 text-center">Sample Coaching Report</h3>
								<div class="relative group cursor-pointer flex-1 flex items-center justify-center" onclick="openReportModal()">
									<img src="/assets/REport Main.png" 
										 alt="VESPA Coaching Report Sample" 
										 class="w-full h-auto rounded-lg shadow-xl transform transition-all duration-300 group-hover:scale-105">
									<div class="absolute inset-0 bg-black/50 rounded-lg flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
										<span class="text-white font-semibold flex items-center">
											<svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
											</svg>
											Click to view full report
										</span>
									</div>
								</div>
								<p class="text-center text-gray-400 text-sm mt-4">
									Click to see how our reports guide student development
								</p>
							</div>
							
							<div class="mt-6 text-center">
								<a href="#how-it-works" class="inline-flex items-center text-theme-secondary font-semibold hover:gap-3 transition-all">
									See how it works <span class="ml-2">â†’</span>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- VESPA Questionnaire Section -->
		<section class="py-24 bg-theme-dark relative">
			<div class="container mx-auto px-6">
				<div class="max-w-4xl mx-auto text-center">
					<h2 class="text-5xl font-bold mb-8 text-white" data-aos="fade-down">
						The <span class="gradient-text">VESPA Questionnaire</span>
					</h2>
					<p class="text-xl text-gray-300 mb-12" data-aos="fade-up">
						A validated, research-backed assessment tool developed in partnership with academic experts
					</p>
				</div>
				
				<div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto mb-12">
					<!-- Academic Validation Card -->
					<div class="validation-card" data-aos="flip-left" data-aos-delay="100">
						<div class="validation-icon">
							<svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold mb-4 text-white">Academic Partnership</h3>
						<p class="text-gray-300 mb-4">
							Developed with <span class="text-theme-secondary font-semibold">Dr Neil Dagnall</span> and <span class="text-theme-secondary font-semibold">Dr Andrew Donovan</span> from Manchester Metropolitan University
						</p>
						<div class="bg-theme-primary/30 p-4 rounded-lg">
							<p class="text-sm text-gray-400">
								Ensuring rigorous academic standards and evidence-based methodology
							</p>
						</div>
					</div>
					
					<!-- Reliability Card -->
					<div class="validation-card" data-aos="flip-right" data-aos-delay="200">
						<div class="validation-icon">
							<svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold mb-4 text-white">Proven Reliability</h3>
						<p class="text-gray-300 mb-4">
							Trialled with <span class="text-theme-secondary font-semibold">1,669 students</span> to ensure internal reliability and validity
						</p>
						<div class="bg-theme-primary/30 p-4 rounded-lg">
							<p class="text-sm text-gray-400">
								Comprehensive testing across diverse student populations
							</p>
						</div>
					</div>
				</div>
				
				<!-- Statistics -->
				<div class="bg-gradient-to-r from-theme-primary to-theme-accent2 p-10 rounded-3xl max-w-4xl mx-auto" data-aos="zoom-in">
					<div class="grid md:grid-cols-3 gap-8 text-center">
						<div>
							<p class="text-5xl font-bold text-white mb-2">28</p>
							<p class="text-white/80">Validated Questions</p>
						</div>
						<div>
							<p class="text-5xl font-bold text-theme-secondary mb-2">0.85</p>
							<p class="text-white/80">Cronbach's Alpha Score</p>
							<p class="text-xs text-white/60 mt-1">(0.8+ indicates excellent reliability)</p>
						</div>
						<div>
							<p class="text-5xl font-bold text-white mb-2">5</p>
							<p class="text-white/80">Key Dimensions Measured</p>
						</div>
					</div>
					
					<div class="mt-8 pt-8 border-t border-white/20">
						<p class="text-center text-white italic">
							"These results suggest that the twenty-eight item VESPA questionnaire can be considered an internally reliable measure."
						</p>
						<p class="text-center text-white/60 text-sm mt-2">
							â€“ Confirmatory Factor Analysis
						</p>
					</div>
				</div>
				
				<!-- Try the Questionnaire Button -->
				<div class="text-center mt-12" data-aos="fade-up">
					<a href="/questionnaire" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-theme-secondary to-theme-accent1 text-theme-dark font-bold rounded-xl text-lg hover:scale-105 transition-transform shadow-xl group">
						<span>Try the Questionnaire</span>
						<svg class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
						</svg>
					</a>
					<p class="text-gray-400 text-sm mt-4">
						Experience a sample of our validated assessment tool
					</p>
				</div>
			</div>
		</section>

		<!-- Detailed Pillar Information -->
		<section class="py-24 bg-gradient-to-b from-theme-dark to-theme-primary relative">
			<div class="container mx-auto px-6">
				<h2 class="text-5xl font-bold mb-8 text-white text-center" data-aos="fade-down">
					Explore Each <span class="gradient-text">Pillar in Detail</span>
				</h2>
				<p class="text-xl text-gray-300 text-center mb-20 max-w-3xl mx-auto" data-aos="fade-up">
					Discover how our evidence-based activities develop each crucial skill
				</p>
				
				<!-- Vision Pillar -->
				<div id="vision-detail" class="pillar-detail mb-20 scroll-mt-20" data-aos="fade-up">
					<div class="grid md:grid-cols-2 gap-12 items-center">
						<div>
							<div class="flex items-center mb-6">
								<div class="pillar-icon-large bg-vision">
									<svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
									</svg>
								</div>
								<h3 class="text-4xl font-bold text-vision ml-6">Vision</h3>
							</div>
							<p class="text-xl text-gray-300 mb-6">
								Vision is about having a clear goal and making the connection between current work and future outcomes. It's about developing "future-mindedness" and taking control of one's educational journey.
							</p>
							<p class="text-lg text-gray-400 mb-6">
								Our programme empowers students to develop their own ideas and take ownership of their future, moving away from passive learning to active goal-setting.
							</p>
							<button onclick="openActivityModal('vision-modal')" class="inline-flex items-center text-vision font-semibold hover:gap-3 transition-all">
								Explore Vision activities <span class="ml-2">â†’</span>
							</button>
						</div>
						<div class="activity-embed flex items-center justify-center bg-gradient-to-br from-vision/10 to-vision/5 rounded-xl p-8">
							<div class="text-center">
								<h4 class="text-2xl font-bold text-white mb-4">Example Activity</h4>
								<p class="text-gray-300 mb-6">Getting Dreams Done</p>
								
								<!-- Original styled button -->
								<button onclick="openSlidesModal('vision-slides-modal')"
								   class="inline-flex items-center justify-center px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-xl group w-full">
									<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
									</svg>
									View Activity Slides
									<svg class="w-4 h-4 ml-2 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 4v6m0 0v6m0-6h6m-6 0H8"></path>
									</svg>
								</button>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Effort Pillar -->
				<div id="effort-detail" class="pillar-detail mb-20 scroll-mt-20" data-aos="fade-up">
					<div class="grid md:grid-cols-2 gap-12 items-center">
						<div class="order-2 md:order-1 activity-embed flex items-center justify-center bg-gradient-to-br from-effort/10 to-effort/5 rounded-xl p-8">
							<div class="text-center">
								<h4 class="text-2xl font-bold text-white mb-4">Example Activity</h4>
								<p class="text-gray-300 mb-6">The 1-10 Scale</p>
								<button onclick="openSlidesModal('effort-slides-modal')"
								   class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-effort to-effort/80 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl group">
									<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
									</svg>
									View Activity Slides
									<svg class="w-4 h-4 ml-2 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 4v6m0 0v6m0-6h6m-6 0H8"></path>
									</svg>
								</button>
							</div>
						</div>
						<div class="order-1 md:order-2">
							<div class="flex items-center mb-6">
