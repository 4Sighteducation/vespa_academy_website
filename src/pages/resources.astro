	const modal = document.getElementById(modalId);
	if (modal) {
		// Get the iframe element
		const iframeId = modalId.replace('-slides-modal', '-iframe');
		const iframe = document.getElementById(iframeId);
		const loadingId = modalId.replace('-slides-modal', '-loading');
		const loading = document.getElementById(loadingId);
		
		// Set the src URL when opening the modal
		if (iframe && slideUrls[modalId]) {
			iframe.src = slideUrls[modalId];
			
			// Force iframe to be visible immediately
			iframe.style.opacity = '1';
			iframe.style.visibility = 'visible';
			
			// Hide loading indicator when iframe loads
			iframe.onload = function() {
				if (loading) {
					loading.style.display = 'none';
				}
				iframe.style.opacity = '1';
				iframe.style.visibility = 'visible';
			};
			
			// Also hide loading after a timeout as fallback
			setTimeout(() => {
				if (loading && loading.style.display !== 'none') {
					loading.style.display = 'none';
					iframe.style.opacity = '1';
					iframe.style.visibility = 'visible';
				}
			}, 3000);
		}
		
		modal.classList.remove('hidden');
		document.body.style.overflow = 'hidden';
	}
}

function closeSlidesModal(modalId) {
	const modal = document.getElementById(modalId);
	if (modal) {
		// Clear the iframe src when closing to stop any playing content
		const iframeId = modalId.replace('-slides-modal', '-iframe');
		const iframe = document.getElementById(iframeId);
		if (iframe) {
			iframe.src = '';
		}
		
		// Show loading indicator for next time
		const loadingId = modalId.replace('-slides-modal', '-loading');
		const loading = document.getElementById(loadingId);
		if (loading) {
			loading.style.display = 'flex';
		}
		
		modal.classList.add('hidden');
		document.body.style.overflow = '';
	}
}

